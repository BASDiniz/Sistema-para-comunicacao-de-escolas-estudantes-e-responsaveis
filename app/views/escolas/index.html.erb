<p id="notice"><%= notice %></p>

<h1>Escolas</h1>

<table border="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf do administrador</th>
      <th>Numero de estudantes</th>
      <th>Numero de series</th>
      <th>Numero de turmas</th>
      <th>Numero de professores</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @escolas.each do |escola| %>
      <tr>
        <td><%= escola.nome %></td>
        <td><%= escola.cpf_do_administrador %></td>
        <td><%= escola.numero_de_estudantes %></td>
        <td><%= escola.numero_de_series %></td>
        <td><%= escola.numero_de_turmas %></td>
        <td><%= escola.numero_de_professores %></td>
        <td><%= link_to 'Show', escola %></td>
        <td><%= link_to 'Edit', edit_escola_path(escola) %></td>
        <td><%= link_to 'Destroy', escola, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

